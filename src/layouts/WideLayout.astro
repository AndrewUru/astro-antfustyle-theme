---
interface Props {
  title: string
  subtitle?: string
}

const { title, subtitle } = Astro.props
---

<header class="prose m-auto mb-8 text-center">
  <h1 class="slide-enter-50 mb-0">
    {title}
  </h1>
</header>
<article class="max-w-300 mx-auto">
  {
    subtitle && (
      <p class="mt--6! mb-8 opacity-50 text-md text-center italic">
        {subtitle}
      </p>
    )
  }
  <slot />
</article>
