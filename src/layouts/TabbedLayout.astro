---
import Link from '~/components/base/Link.astro'
import { ensureTrailingSlash } from '~/utils'
import { LAYOUTS } from '~/config'
import type { Tabs } from '~/types'

interface Props {
  subtitle?: string
}

const { subtitle } = Astro.props

let tabs: Tabs
if (!LAYOUTS.tabbedLayoutTabs) {
  throw new Error('LAYOUTS.tabbedLayoutTabs is not configured.')
} else {
  tabs = LAYOUTS.tabbedLayoutTabs
}

const currentPath = ensureTrailingSlash(Astro.url.pathname)
const isActive = (href: string) => currentPath === ensureTrailingSlash(href)
---

<nav
  id="nav-tabs"
  class="prose m-auto mb-8 animate-none!"
  aria-label="Page sections"
>
  <div
    u-flex="~ gap-3 lt-sm:(col wrap gap-1) "
    class="mb-0 text-3xl select-none"
    role="tablist"
  >
    {
      tabs.map((tab) => (
        <Link
          href={ensureTrailingSlash(tab.path)}
          class:list={{
            'link': true,
            'op-transition!': true,
            'tabs__a--active': isActive(tab.path),
            'tabs__a--inactive': !isActive(tab.path),
          }}
          role="tab"
          aria-current={
            Astro.url.pathname === ensureTrailingSlash(tab.path)
              ? 'page'
              : false
          }
        >
          {tab.title}
        </Link>
      ))
    }
  </div>
  {subtitle && <p class="mt-4! op-50 italic">{subtitle}</p>}
</nav>
<article class="prose slide-enter-content m-auto">
  <slot />
</article>

<style>
  .link {
    border-style: none !important;
  }

  .tabs__a--active {
    opacity: 1;
  }

  .tabs__a--inactive {
    opacity: 0.2;
  }

  .tabs__a--inactive:hover {
    opacity: 0.5;
  }
</style>
