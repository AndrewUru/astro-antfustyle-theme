---
// Importaciones necesarias
import Link from '~/components/base/Link.astro'
import { getUrl } from '~/utils/common'
import { SITE } from '~/config'
---

<Link
  class="link op-transition"
  href={getUrl('/')}
  title={SITE.author}
  aria-current={Astro.url.pathname === `${getUrl('/')}` ? 'page' : false}
>
  <div class="logo-container">
    <!-- SVG Personalizado -->
    <p>DifusorAromas</p>
    <svg
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 107.548 32.732"
      width="2em"
      height="2em"
      aria-hidden="true"
      class="draw dark:fill-[#fdfdfd] dark:stroke-[#fdfdfd]"
      fill="#17191e"
      stroke="#17191e"
      stroke-width="0.4"
      stroke-linecap="round"
    >
      <path
        vector-effect="non-scaling-stroke"
        d="M 14.073 24.606 A 2.438 2.438 0 0 0 14 ..."></path>
    </svg>
  </div>
</Link>

<style>
  .link {
    -webkit-user-select: none;
    user-select: none;
  }

  .logo-container {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 0.8rem;
    transform: scale(1.05);
  }

  .logo-container svg {
    height: 2rem;
  }

  @media (max-width: 767.9px) {
    .logo-container {
      transform-origin: 0%;
      transform: scale(0.95);
    }
  }

  /* Animaci√≥n para trazo */
  @keyframes grow {
    0% {
      stroke-dashoffset: 1px;
      stroke-dasharray: 350px 0;
    }
    20% {
      stroke-dasharray: 0 350px;
    }
    80% {
      stroke-dasharray: 0 350px;
    }
    to {
      stroke-dasharray: 350px 0;
    }
  }

  .draw {
    stroke-dashoffset: 1px;
    stroke-dasharray: 350px 0;
    animation: grow 10s ease forwards infinite;
  }

  @media (prefers-reduced-motion), print {
    .draw {
      stroke-dasharray: unset !important;
      animation: none !important;
    }
  }

  .theme-svg {
    fill: #000; /* Modo claro */
    transition: fill 0.3s ease;
  }

  @media (prefers-color-scheme: dark) {
    .theme-svg {
      fill: #fff; /* Modo oscuro */
    }
  }
</style>
