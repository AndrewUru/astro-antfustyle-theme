---
import type { HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'a'> {
  href: string
  title?: string
  external?: boolean
  children: HTMLElement | HTMLElement[] | string
}

const { href, title, external = false, ...attrs } = Astro.props
---

<a {href} {title} target={external ? '_blank' : '_self'} {...attrs}>
  <slot />
</a>

<style>
  a {
    cursor: pointer;
    text-decoration: none;
    color: inherit;
    transition: opacity 0.2s ease;
    opacity: 0.6;
    outline: none;
  }

  a:hover {
    opacity: 1;
    text-decoration-color: inherit;
  }
</style>
